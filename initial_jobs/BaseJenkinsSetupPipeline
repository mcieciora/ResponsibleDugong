pipelineJob("BaseJenkinsSetupPipeline") {
    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url("https://github.com/mcieciora/ResponsibleDugong.git")
                    }
                    branch('*/feature/base_jenkins_setup_job')
                }
            }
            scriptPath("initial_jobs/BaseJenkinsSetupJenkinsfile")
            lightweight()
        }
    }
    logRotator {
        daysToKeep(31)
    }
}