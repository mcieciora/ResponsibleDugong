pipelineJob("NodeSetupPipeline") {
    parameters {
        stringParam("AGENT_NAME", "master", "Node name or label.")
    }
    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url("https://github.com/mcieciora/ResponsibleDugong.git")
                    }
                    branch('*/develop')
                }
            }
            scriptPath("initial_jobs/NodeSetupJenkinsfile")
            lightweight()
        }
    }
    logRotator {
        daysToKeep(31)
    }
}