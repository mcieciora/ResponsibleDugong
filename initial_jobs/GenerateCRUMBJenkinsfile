pipeline {
    agent {
        label "master"
    }
    parameters {
        booleanParam(name: "SAVE_TOKEN_AS_SECRET", defaultValue: true, description: "Save token as Jenkins secret. If false value will be printed out to console.\nKeep token in safe place as it may be required for administrative tasks.")
    }
    stages {
        stage ("Generate CRUMB") {
            steps {
                script {
                    sh "chmod +x scripts/generate_crumb.sh"
                    sh "scripts/generate_crumb.sh"
                }
            }
        }
        stage ("Copy token.sec value") {
            steps {
                script {
                    sh "cat token.sec"
                    def githubKeysAdded = input(id: "copy_token_sec_value", message: "Copy shown token. It will be required for any administrative tasks.")
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}