pipeline {
    agent {
        label "master"
    }
    parameters {
        booleanParam(name: "SAVE_TOKEN_AS_SECRET", defaultValue: false, description: "Save token as Jenkins secret. If false value will be printed out to console.")
    }
    stages {
        stage ("Generate CRUMB") {
            steps {
                script {
                    sh "chmod +x scripts/generate_crumb.sh"
                    sh "scripts/generate_crumb.sh"
                }
            }
        }
        stage ("Copy token.sec value") {
            steps {
                script {
                    if (params.SAVE_TOKEN_AS_SECRET) {
                        println("TBD")
                    }
                    else {
                        sh "cat token.sec"
                        def githubKeysAdded = input(id: "copy_token_sec_value", message: "Copy shown token. Keep it in safe place as it may be required for administrative tasks.")
                    }
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}