pipelineJob("DockerhubImageCleanUpPipeline") {
    triggers {
        cron("H 23 * * *")
    }
    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url("https://github.com/mcieciora/ResponsibleDugong.git")
                    }
                    branch('*/develop')
                }
            }
            scriptPath("initial_jobs/DockerhubImageCleanUpJenkinsfile")
            lightweight()
        }
    }
    logRotator {
        daysToKeep(7)
    }
}