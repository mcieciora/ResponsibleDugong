pipelineJob("GenerateCRUMBPipeline") {
    parameters {
        booleanParam("SAVE_TOKEN_AS_SECRET", true, "Save token as Jenkins secret. If false value will be printed out to console.\nKeep token in safe place as it may be required for administrative tasks.")
    }
    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url("https://github.com/mcieciora/ResponsibleDugong.git")
                    }
                    branch('*/develop')
                }
            }
            scriptPath("initial_jobs/GenerateCRUMBJenkinsfile")
            lightweight()
        }
    }
    logRotator {
        daysToKeep(1)
    }
}