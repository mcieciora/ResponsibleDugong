pipelineJob("BaseJenkinsSetupPipeline") {
    parameters {
        booleanParam("OVERWRITE", false, "If true all existing keys will be overwritten.")
    }
    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url("https://github.com/mcieciora/ResponsibleDugong.git")
                    }
                    branch('*/feature/base_jenkins_setup_job')
                }
            }
            scriptPath("BaseJenkinsSetupJenkinsfile")
            lightweight()
        }
    }
    logRotator {
        daysToKeep(31)
    }
}